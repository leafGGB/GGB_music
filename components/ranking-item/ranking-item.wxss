/* components/ranking-item/ranking-item.wxss */
.ranking {
  display: flex;
  justify-content: space-between;
  border-radius: 8rpx;
  margin-bottom: 15rpx;
  background-color: #eee;
  overflow: hidden;
}

.content {
  padding: 20rpx;
  overflow: hidden;
}

.content .name {
  color: #000;
  font-size: 36rpx;
}

.content .list {
  margin-top: 10rpx;
  font-size: 28rpx;
}

.content .list .item {
  color: #333;
  margin-top: 6rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.content .list .item .singer {
  color: #333;
}

.album {
  position: relative;
  display: flex;
}

.album .image {
  width: 220rpx;
  height: 220rpx;
  height: 100%;
  background-size: cover;
}

.album .count {
  position: absolute;
  bottom: 0;
  right: 0;
  color: #fff;
  border-radius: 12rpx;
  font-size: 24rpx;
  padding: 6rpx 10rpx;
  background: rgba(0, 0, 0, .5);
}