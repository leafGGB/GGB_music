/* components/nav-bar/nav-bar.wxss */
/* 自定义导航栏 */
.nav {
  display: flex;
  height: 44px;
  color: #fff;
}
.left, .center, .right {
  display: flex;
  justify-content: center;
  align-items: center;
}

.nav .left, .nav .right {
  width: 120rpx;
}

.nav .center {
  flex: 1;
}

/* 控制内容显示 */
.left .icon {
  width: 48rpx;
  height: 48rpx;
}

.default {
  display: none;
}

.slot:empty + .default {
  display: flex;
}

