/* pages/datail-search/detail-search.wxss */
.sousuo {
  padding: 0 20rpx 0 10rpx;
  color: rgb(163, 162, 162);
}

.history {
  margin: 25rpx 25rpx 0rpx;
}

.history .headerText {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.history .headerText .his {
  color: #000;
  font-size: 30rpx;
}

.history .headerText .icon {
  font-size: 35rpx;
}

.history .hisContent {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 10rpx;
  margin: 16rpx 0;
  border-bottom: 1px solid rgba(90, 89, 89, 0.1);
}

.history .hisContent .hisItem {
  font-size: 26rpx;
  margin: 10rpx;
  padding: 10rpx 20rpx 10rpx;
  border-radius: 12rpx;
  background-image: linear-gradient(120deg, #fdfbfb 0%, #ebedee 100%);
}

.hot {
  margin: 0 25rpx;
}

.hot .title {
  color: #000;
  font-weight: 600;
  font-size: 38rpx;
  padding-bottom: 24rpx;
  border-bottom: 1px solid rgba(90, 89, 89, 0.1);
}

.hot .hotContent {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin: 18rpx 16rpx;
}

.hot .hotContent .hotItems {
  display: flex;
  width: 47%;
  padding: 18rpx 8rpx;
  font-size: 28rpx;
}

.hot .hotContent .hotItems .listIndex {
  margin-right: 12rpx;
}

.hot .hotContent .hotItems:nth-child(-n+3) {
  font-weight: 700;
}

.hot .hotContent .hotItems .image {
  margin-left: 10rpx;
  max-width: 50rpx;
  max-height: 50rpx;
}

.maskList {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 108rpx;
  left: 0;
  background-color: #fff;
}

.maskList .mask {
  margin: 10rpx 30rpx;
  padding: 16rpx 0 20rpx;
  color: #000;
  border-bottom: 1px solid rgba(190, 189, 189, 0.1);
}

.maskList .mask .icon {
  color: #aaa;
  margin-right: 14rpx;
}

